<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mjolnir.clapboo.main">

    <Button
        android:text="Boo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_sound_boo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Wilhelm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_sound_wilhelmscream"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="1-up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_sound_1up"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/btn_sound_boo"
        android:layout_alignStart="@+id/btn_sound_boo" />

    <Button
        android:text="Jobs Done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_sound_jobsdone"
        android:textSize="12sp"
        android:elevation="0dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Patrick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_sound_patrick"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Chewy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_sound_chewbacca"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btn_sound_1up"
        android:layout_alignStart="@+id/btn_sound_1up" />

    <Button
        android:text="Coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_sound_coin"
        android:layout_alignBaseline="@+id/btn_sound_jobsdone"
        android:layout_alignBottom="@+id/btn_sound_jobsdone"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Nelson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btn_sound_wilhelmscream"
        android:layout_alignStart="@+id/btn_sound_wilhelmscream"
        android:id="@+id/btn_sound_nelson" />

    <Button
        android:text="Clap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_sound_clap"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Wololo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_sound_clap"
        android:layout_alignRight="@+id/btn_sound_clap"
        android:layout_alignEnd="@+id/btn_sound_clap"
        android:layout_marginTop="56dp"
        android:id="@+id/btn_sound_wololo" />

    <Button
        android:text="Punch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn_sound_wololo"
        android:layout_alignLeft="@+id/btn_sound_1up"
        android:layout_alignStart="@+id/btn_sound_1up"
        android:id="@+id/btn_sound_punch" />

    <Button
        android:text=" Legen ... Dary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_sound_1up"
        android:layout_alignRight="@+id/btn_sound_patrick"
        android:layout_alignEnd="@+id/btn_sound_patrick"
        android:layout_marginTop="58dp"
        android:id="@+id/btn_sound_legendary"
        android:textSize="12sp" />

    <Button
        android:text="Fuck Off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn_sound_legendary"
        android:layout_alignLeft="@+id/btn_sound_chewbacca"
        android:layout_alignStart="@+id/btn_sound_chewbacca"
        android:id="@+id/btn_sound_fuckoff" />

    <Button
        android:text="yeeaah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn_sound_fuckoff"
        android:layout_alignLeft="@+id/btn_sound_nelson"
        android:layout_alignStart="@+id/btn_sound_nelson"
        android:id="@+id/btn_sound_yeeaah" />

    <Button
        android:text="Badum tss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_sound_badumtss"
        android:layout_alignBottom="@+id/btn_sound_punch"
        android:layout_alignLeft="@+id/btn_sound_jobsdone"
        android:layout_alignStart="@+id/btn_sound_jobsdone"
        android:textSize="12sp" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" />
    </HorizontalScrollView>

</RelativeLayout>
